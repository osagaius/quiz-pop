<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
</head>
<body>

  <div class="container-fluid">
    <br>
    <div class="row">
      <div class="col-sm-3">
        <%= @current_user_pieces %>
      </div>
      <div class="col-sm-6" id="main-panel">
        <div class="">
          <%= render 'spinner' %>
        </div>
      </div>
      <div class="col-sm-3">
        <%= @opponent_pieces %>
      </div>
    </div>
    <div class="meter">
      <br><br><br><br>
      <div class="col-sm-10">
        <% if !@game.special_mode %>        
        <div class="btn btn-lg btn-success">
          <p class="text-center">Streak: <%= @game.meter %></p>
        </div>
        <% end %>
      </div>
    </div>
    <div> 
      <%= debug @game %>  
    </div>
  </div>

  

</body>
</html>
