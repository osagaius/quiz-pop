<div class="choice">
  What Piece Would You Like?
</div>

<div class="piece-dialog">

  <%= form_tag("/setPiece", method: "get", id: "piece-form", remote: true) do %>

    <% if current_user.id == @game.player1 %>
      <% @game.player_2_pieces.each do |piece| %>
        <% if !@game.player_1_pieces.include?(piece) %>
        <p>
          <%= radio_button_tag(:choice, piece) %>
          <%= label_tag(:text, piece) %>
        </p>
        <% end %>
      <% end %>
    <% else %>
      <% @game.player_1_pieces.each do |piece| %>
        <% if !@game.player_2_pieces.include?(piece) %>
        <p>
          <%= radio_button_tag(:choice, piece) %>
          <%= label_tag(:text, piece) %>
        </p>
        <% end %>
      <% end %>
    <% end %>

  <%= hidden_field_tag :game_id, @game.id %>

  <input type="submit" value="Choose"/>

  <% end %>
</div>
