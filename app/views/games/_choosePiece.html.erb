<div class="choice">
	What Piece Would You Like?
</div>

<div class="piece-dialog">

	<%= form_tag("/setPiece", method: "get", id: "piece-form", remote: true) do %>
		<% if current_user.id == @game.player1 %>
			<% Category.all.each do |category| %>
				<% if !@game.player_1_pieces.include?(category.title) %>
				<p>
					<%= radio_button_tag(:choice, category.title) %>
					<%= label_tag(:text, category.title) %>
				</p>
				<% end %>
			<% end %>
		<% else %>
			<% Category.all.each do |category| %>
				<% if !@game.player_2_pieces.include?(category.title) %>
				<p>
					<%= radio_button_tag(:choice, category.title) %>
					<%= label_tag(:text, category.title) %>
				</p>
				<% end %>
			<% end %>
		<% end %>

	
	<%= hidden_field_tag :game_id, @game.id %>

	<input type="submit" value="Choose"/>

	<% end %>
</div>
