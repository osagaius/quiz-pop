<div class="feedback">
	Play for a Piece or Challenge
</div>

<% if @game.errors.any? %>
  <div id="error_explanation">
	    <h2><%= pluralize(@game.errors.count, "error") %> prohibited this article from being saved:</h2>
	    <ul>
		    <% @article.game.full_messages.each do |msg| %>
		      <li><%= msg %></li>
		    <% end %>
	    </ul>
  </div>
<% end %>

<div class="special-dialog">

	<%= form_tag("/specialMode", method: "get", id: "special-mode", remote: true) do %>
	<p>
		Select One
	</p>
	<p>
		<%= radio_button_tag(:choice, 'piece') %>
		<%= label_tag(:text, 'Piece') %>
	</p>

	<p>
		<%= radio_button_tag(:choice, 'challenge') %>
		<%= label_tag(:text, 'Challenge') %>
	</p>

	<%= hidden_field_tag :game_id, @game.id %>

	<input type="submit" value="Submit"/>

	<% end %>
</div>
