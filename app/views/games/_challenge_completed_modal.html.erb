<div class="modal fade" id="challengeCompletedModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title">Challenge Results</h4>
      </div>
      <div class="modal-body">
        <% if @game.challenge_winner == current_user.id %>
        <p id="winner-text">You won the challenge.</p>
        <% elsif @game.challenge_winner == -1 %>
        <p id="winner-text">No one won!</p>
        <% elsif @game.challenge_winner != current_user.id %>
        <p id="winner-text">You lost the challenge.</p>
        <% end %>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
      </div>
    </div><!-- /.modal-content -->
  </div><!-- /.modal-dialog -->
</div><!-- /.modal -->