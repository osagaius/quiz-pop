
<div class="container-fluid">
    <div class='col-lg-8'>
        <div class="row-fluid">
            <div class="panel">
                <div class="panel panel-header">

                    <h1><span style='font-size: 25px' class='glyphicon glyphicon-knight'></span>Leaderboard</h1>
                </div>
                <div class="panel panel-body">

                    <div class="span8 well">
                        <ul class="nav nav-tabs">
                            <li><a href="#" data-target="#week, #week_help" data-toggle="tab">This Week</a>
                            </li>
                            <li><a href="#" data-target="#month, #month_help" data-toggle="tab">This Month</a>
                            </li>
                            <li class="active"> <a href="#" data-target="#all, #all_help" data-toggle="tab">All Time</a>
                            </li>
                        </ul>
                        <div class="tab-content">
                            <div class="tab-pane active fade in" id="week">
                                <table class="table table-bordered table-striped stats-table">
                                  <thead>
                                    <tr>
                                        <th>Rank</th>
                                        <th>Name</th>
                                        <th>Number Correct</th>
                                        <th>Accuracy</th>
                                    </tr>
                                </thead><tbody>
                                <% @count = 1 %>
                                <% Statistic.week.each do |key, value| %>
                                <% user = User.find(key) %>
                                <% if user.firstname.to_s.length > 1 %>
                                <% @name = user.get_full_name %>
                                <% else %>
                                <% @name = user.username %>
                                <% end %>
                                <tr data-item-id=<%= "#{user.id}" %> class="item">
                                    <td><%= @count %></td>
                                    <td><%= @name %></td>
                                    <td><%= value[:correct] %></td>
                                    <td><%= value[:accuracy] %>%</td>
                                </tr>
                                <% @count = @count + 1 %>
                                <% end %>
                                    </tbody>
                                </table>
                            </div>
                            <div class="tab-pane fade in" id="month">
                                <table class="table table-bordered table-striped stats-table">
                                  <thead>
                                    <tr>
                                        <th>Rank</th>
                                        <th>Name</th>
                                        <th>Number Correct</th>
                                        <th>Accuracy</th>
                                    </tr>
                                </thead><tbody>
                                <% @count = 1 %>
                                <% Statistic.month.each do |key, value| %>
                                <% user = User.find(key) %>
                                <% if user.firstname.to_s.length > 1 %>
                                <% @name = user.get_full_name %>
                                <% else %>
                                <% @name = user.username %>
                                <% end %>
                                <tr data-item-id=<%= "#{user.id}" %> class="item">
                                    <td><%= @count %></td>
                                    <td><%= @name %></td>
                                    <td><%= value[:correct] %></td>
                                    <td><%= value[:accuracy] %>%</td>
                                </tr>
                                <% @count = @count + 1 %>
                                <% end %>
                                    </tbody>
                                </table>
                            </div>
                            <div class="tab-pane fade in" id="all">
                                <table class="table table-bordered table-striped stats-table">
                                  <thead>
                                    <tr>
                                        <th>Rank</th>
                                        <th>Name</th>
                                        <th>Number Correct</th>
                                        <th>Accuracy</th>
                                    </tr>
                                </thead><tbody>
                                <% @count = 1 %>
                                <% Statistic.all_time.each do |key, value| %>
                                <% user = User.find(key) %>
                                <% if user.firstname.to_s.length > 1 %>
                                <% @name = user.get_full_name %>
                                <% else %>
                                <% @name = user.username %>
                                <% end %>
                                <tr data-item-id=<%= "#{user.id}" %> class="item">
                                    <td><%= @count %></td>
                                    <td><%= @name %></td>
                                    <td><%= value[:correct] %></td>
                                    <td><%= value[:accuracy] %>%</td>
                                </tr>
                                <% @count = @count + 1 %>
                                <% end %>
                                    </tbody>
                                </table>
                            </div>
                    <div class="tab-pane" id="profile">profile tab content</div>
                </div>
            </div>
        </div>
    </div>

</div>
</div>
