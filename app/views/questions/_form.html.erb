<%= form_for @question do |f| %>

    <%= render "shared/error_messages", object: f.object %>

    <p>
      <%= f.label :question %><br>
      <%= f.text_field :text %>
    </p>

    <p>
      <%= f.label :correct_answer %><br>
      <%= f.text_area :correct_answer %>
    </p>

    <p>
      <%= f.label :wrong_answer_1 %><br>
      <%= f.text_area :wrong_answer_1 %>
    </p>

    <p>
      <%= f.label :wrong_answer_2 %><br>
      <%= f.text_area :wrong_answer_2 %>
    </p>

    <p>
      <%= f.label :wrong_answer_3 %><br>
      <%= f.text_area :wrong_answer_3 %>
    </p>

    <p>
      <%= f.submit %>
    </p>

<% end %>