<%= form_for @question do |f| %>

    <%= render "shared/error_messages", object: f.object %>

    <p>
      <%= f.label :text %><br>
      <%= f.text_field :text %>
    </p>

    <p>
      <%= f.label :correct_answer %><br>
      <%= f.text_area :correct_answer %>
    </p>

    <p>
      <%= f.submit %>
    </p>

<% end %>